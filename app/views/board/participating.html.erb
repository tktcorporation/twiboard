<div class="container">
    <div class="is-centered columns">
        <div class="column is-size-4 is-4">
            <p>参加中の板</p>
        </div>
    </div>
    <div class="columns is-centered">
        <div class="boards-box column is-7 is-size-6">
            <% @participating_boards.each do |board| %>
                <div class="board">
                    <p>
                        <%= link_to "", "/board/#{board.id}" %>
                        <span>
                          <%= board.title %>
                        </span>
                    </p>
                </div>
            <% end %>
        </div>
    </div>
</div>